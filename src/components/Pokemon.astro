---
interface Props {
  name: string,
  url: string,
}

import {getPokemonByUrl} from '../services/pokemons'
import CardPokemon from './CardPokemon.astro'

const {name, url} = Astro.props
const data = await getPokemonByUrl(url)

---
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  <CardPokemon id={data.id} name={data.name} sprites={data.sprites}/>
</div>